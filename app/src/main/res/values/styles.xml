<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/trueWhite</item>
        <item name="colorPrimaryDark">@color/trueGrey</item>
        <item name="colorAccent">@color/bubblePink</item>
    </style>

    //Fullscreen dialog pop up screen by Musthaq Ahamad
    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/bubbleDark</item>
        <item name="colorPrimary">@color/bubblePink</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/bubblePink</item>

    </style>

</resources>
